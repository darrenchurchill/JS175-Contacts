doctype html

- let title = "My Contacts Manager"

html(lang="en-US")
  head
    title #{title}
    meta(charset="UTF-8")
    link(rel="stylesheet", href="/stylesheets/application.css")

  body
    header
      h1 #{title}

    if messages && Object.keys(messages).length > 0
      - let msgTypes = Object.keys(messages)
      ul.flash
        each msgType in msgTypes
          each msg in messages[msgType]
            li.flash(class=msgType)= msg

    main
      block content
